      "id": "gemini-model",
      "name": "Google Gemini Model",
      "credentials": {
        "googlePalmApi": {
          "id": "KrmoJ4k8M50fTPAj",
          "name": "ai@pk"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Process AI response and update session history\nconst aiResponse = $input.first().json.output || $input.first().json.text || '';\nconst sessionId = $input.first().json.sessionId;\n\n// Add AI response to session history\nif (sessionId && $globals.sessionHistory && $globals.sessionHistory[sessionId]) {\n  $globals.sessionHistory[sessionId].push({\n    role: 'assistant',\n    content: aiResponse,\n    timestamp: new Date().toISOString()\n  });\n  \n  // Keep only last 10 messages\n  if ($globals.sessionHistory[sessionId].length > 10) {\n    $globals.sessionHistory[sessionId] = $globals.sessionHistory[sessionId].slice(-10);\n  }\n}\n\n// Format response for the frontend\nreturn {\n  json: {\n    output: aiResponse,\n    sessionId: sessionId,\n    timestamp: new Date().toISOString(),\n    status: 'success'\n  }\n};"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        980,
        40
      ],
