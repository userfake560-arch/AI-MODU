    {
      "parameters": {
        "jsCode": "// Simple session management without using $globals\nconst sessionId = $input.first().json.sessionId;\nconst userMessage = $input.first().json.userMessage;\n\n// For now, we'll just pass the message without session history\n// This avoids issues with $globals in n8n\n// In production, you could use a database or Redis for session storage\n\nreturn {\n  json: {\n    userMessage,\n    sessionId,\n    conversationHistory: `user: ${userMessage}`,\n    messageCount: 1\n  }\n};"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        540,
        40
      ],
      "id": "manage-session",
      "name": "Manage Session History"
    },
    {
      "parameters": {
        "promptType": "define",
        "text": "=You are a helpful AI assistant. Respond in the same language as the user (Thai or English). Be concise but thorough.\n\nConversation History:\n{{ $json.conversationHistory }}\n\nCurrent User Message:\n{{ $json.userMessage }}\n\nPlease provide a helpful response:",
        "options": {
          "systemMessage": "You are a helpful AI assistant. You respond in the same language as the user (Thai or English). Be concise but thorough."
        }
      },
      "type": "@n8n/n8n-nodes-langchain.agent",
